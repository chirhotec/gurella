<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Gurella scene editor"
            extensions="gscn"
            icon="icons/sample.gif"
            contributorClass="com.gurella.studio.editor.SceneEditorActionBarContributor"
            class="com.gurella.studio.editor.SceneEditor"
            id="com.gurella.studio.editor.GurellaEditor">
      </editor>
   </extension>
   <extension
         id="com.gurella.studio.refractoring.GurellaAssetsRenameParticipant"
         name="Gurella rename participant"
         point="org.eclipse.ltk.core.refactoring.renameParticipants">
      <renameParticipant
            class="com.gurella.studio.refractoring.GurellaAssetsRenameParticipant"
            id="com.gurella.studio.refractoring.GurellaAssetsRenameParticipant"
            name="Gurella assets rename participant">
         <enablement>
            <and>
               <with
                     variable="affectedNatures">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <equals
                           value="org.eclipse.jdt.core.javanature">
                     </equals>
                  </iterate>
               </with>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
            </and>
         </enablement>
      </renameParticipant>
   </extension>
   <extension
         id="com.gurella.studio.refractoring.GurellaAssetsMoveParticipant"
         name="Gurella assets move participant"
         point="org.eclipse.ltk.core.refactoring.moveParticipants">
      <moveParticipant
            class="com.gurella.studio.refractoring.GurellaAssetsMoveParticipant"
            id="com.gurella.studio.refractoring.GurellaAssetsMoveParticipant"
            name="Gurella assets move participant">
         <enablement>
            <with
                  variable="element">
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IFile">
                  </instanceof>
                  <with
                        variable="affectedNatures">
                     <iterate
                           ifEmpty="false"
                           operator="or">
                        <equals
                              value="org.eclipse.jdt.core.javanature">
                        </equals>
                     </iterate>
                  </with>
               </and>
            </with></enablement>
      </moveParticipant>
   </extension>
   <extension
         id="com.gurella.studio.refractoring.GurellaAssetsCopyParticipant"
         name="Gurella assets copy participant"
         point="org.eclipse.ltk.core.refactoring.copyParticipants">
      <copyParticipant
            class="com.gurella.studio.refractoring.GurellaAssetsCopyParticipant"
            id="com.gurella.studio.refractoring.GurellaAssetsCopyParticipant"
            name="Gurella assets copy participant"
            processOnCancel="false">
         <enablement>
            <with
                  variable="element">
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IFile">
                  </instanceof>
                  <with
                        variable="affectedNatures">
                     <iterate>
                        <equals
                              value="org.eclipse.jdt.core.javanature">
                        </equals>
                     </iterate>
                  </with>
               </and>
            </with></enablement>
      </copyParticipant>
   </extension>

</plugin>
