<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Gurella scene editor"
            extensions="gscn"
            icon="icons/sample.gif"
            contributorClass="com.gurella.studio.editor.SceneEditorActionBarContributor"
            class="com.gurella.studio.editor.SceneEditor"
            id="com.gurella.studio.editor.GurellaEditor">
      </editor>
   </extension>
   <extension
         id="com.gurella.studio.refractoring.GurellaAssetsRenameParticipants"
         name="Gurella rename participants"
         point="org.eclipse.ltk.core.refactoring.renameParticipants">
      <renameParticipant
            class="com.gurella.studio.refractoring.GurellaAssetsRenameParticipants"
            id="com.gurella.studio.refractoring.GurellaAssetsRenameParticipants"
            name="Gurella assets rename participants">
         <enablement>
            <and>
               <with
                     variable="affectedNatures">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <equals
                           value="org.eclipse.jdt.core.javanature">
                     </equals>
                  </iterate>
               </with>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
            </and>
         </enablement>
      </renameParticipant>
   </extension>
   <extension
         id="com.gurella.studio.refractoring.GurellaAssetsMoveParticipants"
         name="Gurella assets move participants"
         point="org.eclipse.ltk.core.refactoring.moveParticipants">
      <moveParticipant
            class="com.gurella.studio.refractoring.GurellaAssetsMoveParticipants"
            id="com.gurella.studio.refractoring.GurellaAssetsMoveParticipants"
            name="Gurella assets move participants">
         <enablement>
            <with
                  variable="element">
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </with></enablement>
      </moveParticipant>
   </extension>

</plugin>
